body
    align-items center
    background-color #f6f6f6
    display flex
    justify-content center
    font-size 14px
    margin 0px
    min-height 100vh

.mtop16
    margin-top 16px

.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position relative
    width 500px

.form-control
    &:focus
    &:active
        outline none
        box-shadow none

.inside
    padding 16px

.header
        background-color #e6e6e6
        padding 16px
        border-radius 8px 8px 0px 0px

a 
    img 
        width 25%
        display block
        margin 0px auto
.footer
    text-align center
    a 
        display inline-block
        font-size .8em
        &:last-child
            margin-left 24px
.btn-success
    width 100%
    border 0px
    background-color #010100


