color1 = #e6e6e6
color2 = #ffcc00
a
.btn
    &:active
    &:focus
        box-shadow none
        outline none

.mtop16
    margin-top 16px

.mtop32
    margin-top 32px

.form-control
    &:hover
    &:focus
        box-shadow none

body
    background-color #fff
    font-size 14px
    font-family: 'Roboto', sans-serif;

nav
    background-color color1
    border-bottom 2px solid #020303
    .navbar-brand
        img
            width 200px
   .navbar-nav
  li.nav-item
    a.nav-link
      border-radius 4px
      color #020303
      font-size .9em
      font-weight bold
      margin-right 4px
      padding 5px 16px !important
      &:hover
        color #fff
        background-color #020303
    ul.dropdown-menu
        border-radius 0px 0px 4px 4px
        background-color #e6e6e6
        border 0px
        top 175% !important
        li
            border-bottom 1px solid #020303
            a
                color #020303
                display block
                float none
                width 100%
                i 
                    color #334F9A
            &:last-child
                border-bottom 0px
            &:hover
                background-color #f7f7f7
                
  li.link-acc
    overflow hidden
    a
      display inline-block
      float left
      margin-right 0px !important
      &:first-child
        border-radius 4px 0px 0px 4px
        border-right 1px solid #e6e6e6
      &:last-child
        border-radius 0px 4px 4px 0px

      &.btn
        border 1px solid #020303
        color #020303
        &:hover
          background-color #020303
          color #fff
        img
            position relative
            top -1px
            margin-right 6px
            width 24px
   li.link-user
    overflow initial
    a
        border 0px !important
        img
            border-radius 50%
        &:hover
            background-color transparent !important
            color #444444 !important
            
.wrapper
    min-height 100vh
    overflow hidden
.panel
  background-color #e6e6e6
  border-radius 6px
  border-bottom 2px solid #020303
  width 100%

  .header
    border-bottom 1px solid #8C8888

    h2.tittle
      display inline-block
      color #19213d
      font-size 1.1em
      padding 12px 16px
      margin-bottom 0px

    ul
        display inline-block
        float right
        margin-right 12px
        li
            display inline-block
            position relative
            a
                display inline-block
                padding 10px
                text-decoration none
                color #020303
                &:hover
                    background-color #f6f6f6
                i
                    color #1e90ff
            ul
                display none
                background-color #e6e6e6
                border 1px solid #EBEBEB
                float none
                position absolute
                right -16px
                width 200px
                li
                    display inline-block
                    border-bottom 1px solid #EBEBEB
                    width 100%
                    &:last-child
                        border-bottom 0px
                    a
                        display block
                        width 100%
            &:hover
                ul
                    display block

  .inside
    padding 16px

    .form_search
        display none
        margin-bottom 16px
        .btn
            width 100%
    .big_count
        display block
        font-size 2em
        text-align center
        width 100%

    .nav
      .nav-link
        color #020303
        border 1px solid #020303
        margin-right 8px
        margin-top 10px

        &:hover
          background-color #020303
          color #e6e6e6


  .opts
    a
      border-radius 4px
      border 1px solid #dedede
      display inline-block
      padding 8px 12px


.edit_avatar
    position relative
    a
        display block
        margin 0px auto
        position relative
        width 140px
        .overlay
            align-items center
            background-color rgba(0,0,0, .55)
            border-radius 50%
            color #fff
            font-size 2em
            display none
            justify-content center
            height 140px
            position absolute
            width 100%
            img
                width 60px
        &:hover
            .overlay
                display flex
    img
        border-radius 50%
        display block
        width 100%
    .form-control
        display none
.btn-primary
    background-color #020303
    color #e6e6e6
    border 0px
    padding 8px 24px !important
    &:hover
        background-color #1a1b1c
        color #fff



    