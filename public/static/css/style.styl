        width 50%;
        a.nav-link
            text-align center
            span
                display block
                font-size 1em
                font-weight normal
                margin-top 4px
                width 100%
          i
            font-size 3em
        &:last-child
          float right
          width 100%;
      li.link-acc
        a
            font-size 1.2em
            width 50% !important
            i
                font-size 1em !important
      li.link-user
        border 1px solid #8C8888
        border-radius 6px
        padding 8px
        a
            // border-bottom 1px solid #8C8888 !important
            display block
            font-size 1.2em !important
            width 100% !important
            img
                width 36px !important
        ul.dropdown-menu
            // border-top 1px solid #8C8888 !important
            top 0px !important
        ul.shadow
            box-shadow none !important
    





    