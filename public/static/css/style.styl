body
    background-color #fff
    font-size 14px
    font-family: 'Roboto', sans-serif;

nav
    background-color color1
    border-bottom 2px solid #020303
    .navbar-brand
        img
            width 200px
    .navbar-toggler
        &:active
        &:focus
            outline none
            box-shadow none
   .navbar-nav
  li.nav-item
    a.nav-link
      border-radius 4px
      color #020303
      font-size .9em
      font-weight bold
      margin-right 4px
      padding 5px 16px !important
      &:hover
        color #fff
        background-color #020303
    ul.dropdown-menu
        border-radius 0px 0px 4px 4px
        background-color #e6e6e6
        border 0px
        top 175% !important
        li
            border-bottom 1px solid #020303
            a
                color #020303
                display block
                float none
                width 100%
                i 
                    color #334F9A
            &:last-child
                border-bottom 0px
            &:hover
                background-color #f7f7f7
                
  li.link-acc
    overflow hidden
    a
      display inline-block
      float left
      margin-right 0px !important
      &:first-child
        border-radius 4px 0px 0px 4px
        border-right 1px solid #e6e6e6
      &:last-child
        border-radius 0px 4px 4px 0px

      &.btn
        border 1px solid #020303
        color #020303
        &:hover
          background-color #020303
          color #fff
        img
            position relative
            top -1px
            margin-right 6px
            width 24px
   li.link-user
    overflow initial
    a
        border 0px !important
        img
            border-radius 50%
        &:hover
            background-color transparent !important
            color #444444 !important
            
.wrapper
    min-height 100vh
    overflow hidden
.panel
  background-color #e6e6e6
  border-radius 6px
  border-bottom 2px solid #020303
  width 100%

  .header
    border-bottom 1px solid #8C8888

    h2.tittle
      display inline-block
      color #19213d
      font-size 1.1em
      padding 12px 16px
      margin-bottom 0px

    ul
        display inline-block
        float right
        margin-right 12px
        li
            display inline-block
            position relative
            a
                display inline-block
                padding 10px
                text-decoration none
                color #020303
                &:hover
                    background-color #f6f6f6
                i
                    color #1e90ff
            ul
                display none
                background-color #e6e6e6
                border 1px solid #EBEBEB
                float none
                position absolute
                right -16px
                width 200px
                li
                    display inline-block
                    border-bottom 1px solid #EBEBEB
                    width 100%
                    &:last-child
                        border-bottom 0px
                    a
                        display block
                        width 100%
            &:hover
                ul
                    display block

  .inside
    padding 16px

    .form_search
        display none
        margin-bottom 16px
        .btn
            width 100%
    .big_count
        display block
        font-size 2em
        text-align center
        width 100%

    .nav
      .nav-link
        color #020303
        border 1px solid #020303
        margin-right 8px
        margin-top 10px

        &:hover
          background-color #020303
          color #e6e6e6


  .opts
    a
      border-radius 4px
      border 1px solid #dedede
      display inline-block
      padding 8px 12px


.edit_avatar
    position relative
    a
        display block
        margin 0px auto
        position relative
        width 140px
        .overlay
            align-items center
            background-color rgba(0,0,0, .55)
            border-radius 50%
            color #fff
            font-size 2em
            display none
            justify-content center
            height 140px
            position absolute
            width 100%
            img
                width 60px
        &:hover
            .overlay
                display flex
    img
        border-radius 50%
        display block
        width 100%
    .form-control
        display none
.btn-primary
    background-color #020303
    color #e6e6e6
    border 0px
    padding 8px 24px !important
    &:hover
        background-color #1a1b1c
        color #fff

.home_action_bar
    background-color #e6e6e6
    // border 1px solid #8C8888
    border-radius 4px
    padding 16px
    margin-top 24px
    .categories
        position relative
        a
            background-color #020303
            border-radius 4px
            color #e6e6e6
            display block
            padding 12px
            text-transform uppercase
            text-decoration none
            width 100%
            &:hover
                background-color #444444
        &:active
        &:focus
            a
                background-color #444444
        &:hover
            ul
                display block
        ul
            display none
            list-style none
            margin 0px
            padding 0px
            position absolute
            width 100%
            li
                a
                    background-color #fff
                    border-radius 0px
                    color #020303
                    img
                        position relative
                        margin-top -5px
                        margin-right 12px
                        width 20px
                    &:hover
                        color #fff
    .input-group
        position relative
        i
            position absolute
            font-size 1.4em
            top 14px
            left 6px
            z-index 10
        .form-control
            border-radius 4px 0px 0px 4px
            padding 10px 16px
            padding-left 46px
            z-index 2
            &:focus
                border 1px solid #24a3fc
                &::placeholder
                    color #24a3fc
        &:focus-within
            i
                color #24a3fc
        .btn
            background-color #020303
            color #fff
            &:hover
                background-color #24a3fc
                color #fff

.mdslider
    display flex
    flex-wrap wrap
    margin-top 24px
    min-height 380px
    overflow hidden
    position relative
    width 100%
    .md-slider-item
        align-items center
        border-right 1px solid #fff
        border-radius 4px
        display none
        background-color #020303
        color #fff
        font-size 4em
        justify-content center
        position absolute
        min-height 380px
        transition .4s all ease-in-out
        width 100% !important
    ul.navigation
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%);
        z-index: 9;
        top calc(50% - 18px)
        width: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;

        li
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 10px;
            i
                position relative
                left -25px
                font-size 1.8em
                color #fff
                z-index 1
            a
                display: flex;
                justify-content: center;
                align-items: center;
                text-decoration: none;
                height: 36px;
                width: 36px;
                background-color: rgba(0, 0, 0, 0.5);
                border-radius: 50%;
                color: #fff;
                line-height: 36px // Corrección aquí
                position: relative;
                z-index: 2;
                
            &:first-child
                margin-left 32px
            &:last-child
                margin-right 32px
                float right



@media only screen and (max-width: 728px)
  nav
    .navbar-nav
      display block !important
